---

# managed by Ansible

db.options:
  driver: {{ gemini_db_options.driver }}
  host: {{ gemini_db_options.host }}
  port: {{ gemini_db_options.port }}
  dbname: {{ gemini_db_options.dbname }}
  user: {{ gemini_db_options.user }}
  password: {{ gemini_db_options.password }}

log:
  # Valid log levels are:
  # DEBUG, INFO, NOTICE, WARNING, ERROR, CRITICAL, ALERT, EMERGENCY, NONE
  # log level none won't open logfile
  level: {{ gemini_log_level }}
  file: {{ gemini_log_file }}

syn:
  # toggles JWT security for service
  enable: {{ gemini_jwt_enabled }}
  # Path to the syn config file for authentication.
  # example can be found here:
  # https://github.com/Islandora-CLAW/Syn/blob/master/conf/syn-settings.example.xml
  config: {{ gemini_jwt_config }}